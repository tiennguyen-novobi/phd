<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="phd_view_move_form_phd_description" model="ir.ui.view">
        <field name="name">phd.account.move.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="stock_picking_ids" widget="many2many_tags"
                       context="{'phd_description': True, 'purchase_id': context.get('default_purchase_id', False)}"
                       options="{'no_create': True, 'no_open': True}"
                        attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('type', '!=', 'in_invoice')]}"/>
            </xpath>
        </field>
    </record>
</odoo>