<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="phd_purchase_report_purchaseorder_document_inherit"
              inherit_id="purchase.report_purchaseorder_document">

        <xpath expr="//p[@t-if='o.partner_id.vat']" position="attributes">
            <attribute name="style">display:none</attribute>
        </xpath>

        <xpath expr="//t[@t-set='address']/div[@t-field='o.partner_id']" position="before">
            <strong>Vendor:</strong>
        </xpath>

        <xpath expr="//t[@t-set='information_block']/div[@t-if='o.picking_type_id and o.picking_type_id.warehouse_id']"
               position="attributes">
            <attribute name="style">display:none</attribute>
        </xpath>

        <xpath expr="//t[@t-set='information_block']/div[@t-if='o.picking_type_id and o.picking_type_id.warehouse_id']"
               position="after">
            <div t-if="o.shipping_address_id">
                <span t-field="o.shipping_address_id.name"/>
                <div t-field="o.shipping_address_id"
                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
            </div>
            <div t-elif="o.picking_type_id and o.picking_type_id.warehouse_id">
                <span t-field="o.picking_type_id.warehouse_id.partner_id.name"/>
                <div t-field="o.picking_type_id.warehouse_id.partner_id"
                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
            </div>
        </xpath>

        <xpath expr="//div[@id='informations']/div[@t-if='o.date_order']/p[@t-field='o.date_order']"
               position="attributes">
            <attribute name="t-options">{"widget": "date"}</attribute>
        </xpath>
        <!--class="col-auto mw-100 mb-2"-->

        <xpath expr="//div[@id='informations']/div[@t-if='o.user_id']" position="attributes">
            <attribute name="class">col-auto mw-100 mb-2</attribute>
        </xpath>

        <xpath expr="//div[@id='informations']/div[@t-if='o.partner_ref']" position="attributes">
            <attribute name="class">col-auto mw-100 mb-2</attribute>
        </xpath>

        <xpath expr="//div[@id='informations']/div[@t-if='o.date_order']" position="attributes">
            <attribute name="class">col-auto mw-100 mb-2</attribute>
        </xpath>

        <xpath expr="//div[@id='informations']/div[@t-if='o.date_order']" position="after">
            <div t-if="o.payment_term_id" class="col-auto mw-100 mb-2">
                <strong>Terms:</strong>
                <p t-field="o.payment_term_id" class="m-0"/>
            </div>

            <div t-if="o.date_planned" class="col-auto mw-100 mb-2">
                <strong>Due Date:</strong>
                <p t-field="o.date_planned" class="m-0" t-options='{"widget": "date"}'/>
            </div>

            <div t-if="o.incoterm_id" class="col-auto mw-100 mb-2">
                <strong>FOB:</strong>
                <p t-field="o.incoterm_id" class="m-0"/>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('page')]/table/thead/tr/th[@name='th_description']" position="before">
            <th name="th_product">
                <strong>Item</strong>
            </th>
        </xpath>

        <xpath expr="//div[hasclass('page')]/table/tbody//span[@t-field='line.date_planned']" position="attributes">
            <attribute name="t-options">{"widget": "date"}</attribute>
        </xpath>

        <xpath expr="//div[hasclass('page')]/table/tbody//td[@id='product']" position="before">
            <td id="item">
                <span t-field="line.product_id"/>
            </td>
        </xpath>
    </template>

    <template id="phd_purchase_report_purchasequotation_document_inherit"
              inherit_id="purchase.report_purchasequotation_document">

        <xpath expr="//p[@t-if='o.partner_id.vat']" position="attributes">
            <attribute name="style">display:none</attribute>
        </xpath>

        <xpath expr="//t[@t-set='address']/div[@t-field='o.partner_id']" position="before">
            <strong>Vendor:</strong>
        </xpath>
    </template>
</odoo>
