<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="phd_paypal_transaction_form_view" model="ir.ui.view">
        <field name="name">phd.paypal.transaction.form.view</field>
        <field name="model">paypal.transaction</field>
        <field name="arch" type="xml">
            <form create="0" edit="0">
                <header>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_entry" class="oe_stat_button" string="Journal Entry" icon="fa-bars" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    </div>
                    <group name="top">
                        <group name="left">
                            <group>
                                <field name="transaction_id" readonly="1"/>
                                <field name="date" readonly="1"/>
                                <field name="authorization_id" readonly="1"/>
                            </group>
                        </group>
                        <group name="right">
                            <field name="order_id" readonly="1"/>
                            <field name="amount" readonly="1"/>
                            <field name="paypal_fee_amount" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="phd_paypal_transaction_tree_view" model="ir.ui.view">
        <field name="name">phd.paypal.transaction.tree.view</field>
        <field name="model">paypal.transaction</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="transaction_id"/>
                <field name="date"/>
                <field name="order_id"/>
                <field name="authorization_id"/>
                <field name="amount"/>
                <field name="paypal_fee_amount"/>
            </tree>
        </field>
    </record>

    <record id="phd_paypal_transaction_action" model="ir.actions.act_window">
        <field name="name">Paypal Transactions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">paypal.transaction</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="phd_paypal_transaction_menu"
            name="Paypal Transactions"
            action="phd_paypal_transaction_action"
            parent="phd_request_log.menu_reporting_settlement"
            sequence="10"/>
</odoo>