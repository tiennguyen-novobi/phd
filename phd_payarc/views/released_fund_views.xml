<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_released_fund_form" model="ir.ui.view">
        <field name="name">released.fund.form</field>
        <field name="model">released.fund</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" states="draft"/>
                    <button name="action_draft" type="object" string="Set to draft" class="btn-secondary" states="confirm,cancel"
                            confirm="Reset to draft will cancel the posted entry. Are you sure to continue?"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" states="draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_entry" class="oe_stat_button" icon="fa-bars" type="object"
                                attrs="{'invisible': [('move_count', '=', 0)]}">
                            <field name="move_count" widget="statinfo" string="Journal Entry"/>
                        </button>
                    </div>

                    <group name="top">
                        <group>
                            <field name="date" string="Batch Date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="transit_account_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_released_fund_tree" model="ir.ui.view">
        <field name="name">released.fund.tree</field>
        <field name="model">released.fund</field>
        <field name="arch" type="xml">
            <tree>
                <field name="journal_id" invisible="1"/>
                <field name="date"/>
                <field name="number"/>
                <field name="amount"/>
                <field name="transit_account_id"/>
                <field name="is_reconciled" widget="boolean_toggle"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_view_released_fund" model="ir.actions.act_window">
        <field name="name">Released Funds</field>
        <field name="res_model">released.fund</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_released_fund"
            action="action_view_released_fund"
            parent="phd_request_log.menu_reporting_settlement"
            sequence="40"/>
</odoo>
