<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="phd_settlement_report_form_view" model="ir.ui.view">
        <field name="name">phd.settlement.report.form.view</field>
        <field name="model">settlement.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="confirm" type="object" string="Confirm" class="btn btn-primary" states="draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Settlement ID" modifiers="{}"/>
                        <h1>
                            <field name="name" required="True" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="journal_id" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="date" required="1" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                        </group>
                    </group>
                    <div>
                        <span style="font-size: 20px">Batch Reports</span>
                        <field name="batch_report_ids" widget="many2many" options="{'no_create': True}" attrs="{'readonly': [('state', '=', 'confirm')]}" domain="[('settlement_id', '=', False), ('state', '=', 'post')]">
                            <tree>
                                <field name="date"/>
                                <field name="amount"/>
                                <field name="transaction_qty"/>
                                <field name="batch_ref"/>
                                <field name="fees_amount"/>
                                <field name="reserve_hold_amount"/>
                                <field name="subtotal"/>
                            </tree>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="phd_settlement_report_tree_view" model="ir.ui.view">
        <field name="name">phd.settlement.report.tree.view</field>
        <field name="model">settlement.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date" string="Date"/>
                <field name="name" string="Settlement ID"/>
                <field name="amount"/>
                <field name="is_reconciled" widget="boolean_toggle"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="phd_settlement_report_action" model="ir.actions.act_window">
        <field name="name">Settlements</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">settlement.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_settlement_payarc_settlements"
            action="phd_settlement_report_action"
            parent="phd_request_log.menu_settlement_payarc"
            sequence="30"/>
</odoo>
