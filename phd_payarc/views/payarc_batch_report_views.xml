<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="phd_batch_report_form_view" model="ir.ui.view">
        <field name="name">phd.batch.report.form.view</field>
        <field name="model">payarc.batch.report</field>
        <field name="arch" type="xml">
            <form create="0">
                <header>
                    <button name="action_confirm" type="object" string="Post" class="btn-primary" states="draft"/>
                    <button name="action_draft" type="object" string="Set to draft" class="btn-secondary" states="post,cancel"
                            confirm="Reset to draft will cancel the posted entry. Are you sure to continue?"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" states="draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,post"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_entry" class="oe_stat_button" icon="fa-calculator" type="object"
                                attrs="{'invisible': [('move_count', '=', 0)]}">
                            <field name="move_count" widget="statinfo" string="Journal Entry"/>
                        </button>
                    </div>

                    <group name="top">
                        <group>
                            <field name="journal_id" readonly="1"/>
                            <field name="date" string="Batch Date" readonly="1"/>
                            <field name="transaction_qty" string="# of Transactions" readonly="1"/>
                            <field name="settlement_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="amount" readonly="1"/>
                            <field name="fees_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="reserve_hold_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="subtotal" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="sales_account_id" readonly="1"/>
                            <field name="fees_account_id" readonly="1"/>
                            <field name="reserve_account_id" readonly="1"/>
                            <field name="transit_account_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="phd_batch_report_tree_view" model="ir.ui.view">
        <field name="name">phd.batch.report.tree.view</field>
        <field name="model">payarc.batch.report</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" decoration-muted="state == 'cancel'">
                <field name="date"/>
                <field name="amount"/>
                <field name="transaction_qty" string="Transactions"/>
                <field name="batch_ref"/>
                <field name="settlement_id"/>
                <field name="fees_amount"/>
                <field name="reserve_hold_amount"/>
                <field name="subtotal"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="phd_batch_report_action" model="ir.actions.act_window">
        <field name="name">PayArc Batch Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payarc.batch.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="phd_payarc_batch_report_menu"
            name="PayArc Batch Reports"
            action="phd_batch_report_action"
            parent="phd_request_log.menu_reporting_settlement"
            sequence="20"/>
</odoo>