<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="phd_account_journal_dashboard_kanban_view" model="ir.ui.view">
        <field name="name">phd.account.journal.dashboard.kanban.view</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_manage_reconciliation')]" position="inside">
                <hr/>
                <div class="o_kanban_card_manage_title" groups="account.group_account_manager">
                    <span role="separator">Reconciliation</span>
                </div>
                <div>
                    <a name="action_open_batch_report" role="menuitem" type="object">Batch Reports</a>
                </div>
            </xpath>

<!--            <xpath expr="//div[hasclass('o_kanban_manage_reports')]" position="inside">-->
<!--                <div>-->
<!--                    <a role="menuitem" type="object" name="action_open_batch_report">PayArc Batch Reports</a>-->
<!--                </div>-->
<!--                <div>-->
<!--                    <a role="menuitem" type="object" name="action_open_settlement_report">Settlements</a>-->
<!--                </div>-->
<!--            </xpath>-->
        </field>
    </record>

    <record id="phd_account_journal_view_form" model="ir.ui.view">
        <field name="name">phd.account.journal.view.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='advanced_settings']" position="after">
                <page name="integration" string="Integrations" attrs="{'invisible': [('type', '!=', 'bank')]}">
                    <group name="payarc" string="PayArc/Authorize.Net">
                        <div colspan="2">
                            <field name="is_integrate_with_payarc" nolabel="1" class="oe_inline"/>
                            <label for="is_integrate_with_payarc" string="Integrate with PayArc / Authorize.Net" class="oe_inline"/>
                        </div>
                        <group name="credential" string="Credential" groups="base.group_no_one" attrs="{'invisible': [('is_integrate_with_payarc', '=', False)]}">
                            <field name="payarc_access_token" attrs="{'required': [('is_integrate_with_payarc', '=', True)]}"/>
                            <field name="authorize_login_id" attrs="{'required': [('is_integrate_with_payarc', '=', True)]}"/>
                            <field name="authorize_transaction_key" attrs="{'required': [('is_integrate_with_payarc', '=', True)]}"/>
                        </group>
                        <group string="Accounts" attrs="{'invisible': [('is_integrate_with_payarc', '=', False)]}">
                            <field name="payarc_sales_account_id" attrs="{'required': [('is_integrate_with_payarc', '=', True)]}"/>
                            <field name="payarc_fees_account_id" attrs="{'required': [('is_integrate_with_payarc', '=', True)]}"/>
                            <field name="payarc_reserve_account_id" attrs="{'required': [('is_integrate_with_payarc', '=', True)]}"/>
                            <field name="payarc_transit_account_id" attrs="{'required': [('is_integrate_with_payarc', '=', True)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
