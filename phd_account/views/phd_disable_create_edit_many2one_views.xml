<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="phd_account_move_form_view_disable_many2one" model="ir.ui.view">
        <field name="name">phd.account.move.form.view.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True, 'res_partner_search_mode': (context.get('default_type', 'entry') in ('out_invoice', 'out_refund', 'out_receipt') and 'customer') or (context.get('default_type', 'entry') in ('in_invoice', 'in_refund', 'in_receipt') and 'supplier') or False,
                                            'show_address': 1, 'default_is_company': True, 'show_vat': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_uom_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_partner_bank_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_user_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//field[@name='team_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//page[@name='other_info'][1]//field[@name='ar_in_charge'][1]" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_incoterm_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//field[@name='fiscal_position_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>

            <xpath expr="//page[@id='aml_tab']//tree/field[@name='partner_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True,}</attribute>
            </xpath>
        </field>
    </record>

    <record id="phd_view_account_payment_form_usa_disable_many2one" model="ir.ui.view">
        <field name="name">phd.account.payment.form.usa.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="l10n_us_accounting.view_account_payment_form_usa"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id'][2]" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True, 'default_is_company': True, 'res_partner_search_mode': 'supplier', 'default_customer_rank': payment_type == 'inbound' and 1}</attribute>
            </xpath>

            <xpath expr="//field[@name='ar_in_charge']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True}</attribute>
            </xpath>
        </field>
    </record>


    <record id="phd_view_batch_payment_form_disable_many2one" model="ir.ui.view">
        <field name="name">phd.account.batch.payment.form.view.inherit</field>
        <field name="model">account.batch.payment</field>
        <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_method_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='fund_line_ids']/tree/field[@name='partner_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='fund_line_ids']/tree/field[@name='account_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>