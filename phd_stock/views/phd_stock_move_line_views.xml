<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="phd_view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="priority">1001</field>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='lot_id']" position="before">
                <field name="mo_id"/>
            </xpath>
            <xpath expr="//tree/field[@name='lot_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>