<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="phd_product_product_view_form" model="ir.ui.view">
        <field name="name">product.product.view.form.phd.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="me_replenishment_planning.product_product_view_form"/>
        <field name="arch" type="xml">
            <button name="action_open_replenishment_planning_for_product" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <xpath expr="//label[@for='po_perc']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='po_perc']/parent::div" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>


    <record id="phd_product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.phd.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="me_replenishment_planning.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <button name="action_open_replenishment_planning_for_template" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <xpath expr="//label[@for='po_perc']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='po_perc']/parent::div" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
