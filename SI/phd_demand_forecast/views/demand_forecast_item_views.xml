<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Menu items -->
    <record id="action_demand_forecast_views" model="ir.actions.act_window">
        <field name="name">Forecasted Demand</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">demand.forecast.item</field>
        <field name="view_mode">tree,form</field>
        <!--        <field name="context">{"search_default_product": 0}</field>-->
    </record>

    <menuitem name="Forecasted Demand"
              id="menu_demand_forecast"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_demand_forecast_views"
              groups="phd_inventory.group_stock_view_only"
              sequence="200"/>

    <!-- List, Form views -->
    <record id="view_demand_forecast_item_list_view" model="ir.ui.view">
        <field name="name">view.demand.forecast.item.list.view</field>
        <field name="model">demand.forecast.item</field>
        <field name="arch" type="xml">
            <tree string="Forecasted Demand" duplicate="0" default_order="week_end_date asc">
                <field name="product_default_code"/>
                <field name="product_id"/>
                <field name="partner_id"/>
                <field name="week_end_date"/>
                <field name="demand_qty"/>
                <field name="product_uom_id"/>
            </tree>
        </field>
    </record>

    <record id="view_demand_forecast_item_form_view" model="ir.ui.view">
        <field name="name">view.demand.forecast.item.form.view</field>
        <field name="model">demand.forecast.item</field>
        <field name="arch" type="xml">
            <form string="Forecasted Demand" duplicate="0">
                <sheet>
                    <group>
                        <group>
                            <field name="product_default_code"/>
                            <field name="product_id"/>
                            <field name="partner_id"/>
                            <field name="week_end_date"/>
                        </group>
                        <group>
                            <field name="demand_qty"/>
                            <field name="product_uom_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_demand_forecast_item_search_view" model="ir.ui.view">
        <field name="name">view.demand.forecast.item.search.view</field>
        <field name="model">demand.forecast.item</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id"/>
                <field name="partner_id"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="partner" context="{'group_by':'partner_id'}" help="Partner"/>
                    <filter string="Product" name="product" context="{'group_by':'product_id'}" help="Product"/>
                </group>
            </search>
        </field>
    </record>
</odoo>