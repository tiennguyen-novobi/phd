<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form/Tree Views -->
    <record id="stock_forcasted_demand_product_product_action" model="ir.actions.client">
        <field name="name">Forecasted Demand Report</field>
        <field name="tag">forecasted_demand_report</field>
    </record>

    <record id="view_product_product_form_inherit" model="ir.ui.view">
        <field name="name">view.product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
                    <field name="forecasted_demand_ok"/>
                    <label for="forecasted_demand_ok"/>
                </div>
            </div>
        </field>
    </record>

    <record id="view_product_product_form_forecasted_demand_inherit" model="ir.ui.view">
        <field name="name">product.product.forecasted.demand.form</field>
        <field name="model">product.product</field>
        <field name="groups_id" eval="[(4, ref('stock.group_stock_user'))]"/>
        <field name="inherit_id" ref="stock.product_form_view_procurement_button"/>
        <field name="arch" type="xml">
            <button name="action_view_stock_move_lines" position="before">
                <button
                        string="Forecasted Demand"
                        type="object"
                        name="action_product_forecasted_demand_report"
                        context="{'default_product_id': id}"
                        class="oe_stat_button" icon="fa-line-chart"
                        attrs="{'invisible':[('forecasted_demand_ok','=',False)]}"
                >
                </button>
            </button>
        </field>
    </record>

    <record id="view_product_product_tree_inherit" model="ir.ui.view">
        <field name="name">view.product.product.tree.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="forecasted_demand_ok" widget="boolean_toggle"/>
            </field>
        </field>
    </record>

    <!--- Additional Actions -->
    <record id="action_include_product_forecasting" model="ir.actions.server">
        <field name="name">Include in the Forecast</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records:
            records.action_include_product_forecasting()
        </field>
    </record>

    <record id="action_exclude_product_forecasting" model="ir.actions.server">
        <field name="name">Exclude out of the Forecast</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records:
            records.action_exclude_product_forecasting()
        </field>
    </record>
</odoo>