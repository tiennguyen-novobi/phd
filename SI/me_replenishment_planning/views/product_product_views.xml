<odoo>

    <record id="product_product_view_form" model="ir.ui.view">
        <field name="name">product.product.view.form.po.percentage</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='operations']" position="inside">
                <label for="po_perc"/>
                <div class="o_row d-flex">
                    <field name="po_perc"/>
                    <span class="oe_grey"> %</span>
                </div>
            </xpath>
            <div name="button_box" position="inside">
                <button name="action_open_replenishment_planning_for_product"
                        type="object" class="oe_stat_button" icon="fa-refresh"
                        string="Replenishment Planning"/>
            </div>
        </field>
    </record>

</odoo>
