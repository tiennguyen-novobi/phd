<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.replenishment.planning</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]
                         //div[@data-string='Inventory']" position="inside">
                <div class="replenishment_planning_block" groups="stock.group_stock_manager">
                    <h2>Replenishment Planning</h2>
                    <div class="row mt16 o_settings_container forecasting_container">
                        <div id="replenishment_percent_box" class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Replenishment Percentage (for PO)</span>
                                <span class="fa fa-lg fa-building-o"
                                      title="Values set here are company-specific."
                                      aria-label="Values set here are company-specific."
                                      groups="base.group_multi_company"
                                      role="img"/>
                                <div class="text-muted">
                                    It is the quantity percentage that we order from PO
                                </div>
                                <div class="row mt16">
                                    <label class="o_light_label col-lg-4"
                                           string="Purchase"
                                           for="po_perc"/>
                                    <field name="po_perc" class="text-right" required="1"/> %
                                </div>
                            </div>
                        </div>

                        <div id="replenishment_percent_box" class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Default Warehouse</span>
                                <span class="fa fa-lg fa-building-o"
                                      title="Values set here are company-specific."
                                      aria-label="Values set here are company-specific."
                                      groups="base.group_multi_company"
                                      role="img"/>
                                <div class="row mt16">
                                    <label class="o_light_label col-lg-4"
                                           string="Default Warehouse"
                                           for="replenishment_default_warehouse"/>
                                    <field name="replenishment_default_warehouse" class="text-left" required="1" options="{'no_create_edit': True}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>