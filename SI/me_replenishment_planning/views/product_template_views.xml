<odoo>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.me.replenishment.planning</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='operations']" position="inside">
                <label for="po_perc" attrs="{'invisible': [('product_variant_count', '>', 1)]}"/>
                <div class="o_row d-flex" attrs="{'invisible': [('product_variant_count', '>', 1)]}">
                    <field name="po_perc"/>
                    <span class="oe_grey"> %</span>
                </div>
            </xpath>
            <div name="button_box" position="inside">
                <button name="action_open_replenishment_planning_for_template"
                        type="object" class="oe_stat_button" icon="fa-refresh"
                        string="Replenishment Planning"
                        attrs="{'invisible': [('product_variant_count', '>', 1)]}"/>
            </div>
        </field>
    </record>

</odoo>
