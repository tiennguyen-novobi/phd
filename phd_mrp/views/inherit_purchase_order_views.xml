<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_pruchase_order_form_inherit_phd_mrp" model="ir.ui.view">
        <field name="name">purchase_order.form.view.inherit.phd.mrp</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]/button[@name='action_view_picking']" position="before">
                <field name="production_ids" invisible="1"/>
                <button type="object" name="action_view_production" class="oe_stat_button" icon="fa-wrench"
                        attrs="{'invisible':[('production_ids','=',[])]}">
                    <field name="production_count" widget="statinfo" string="Subcontract Manufacturing Order"
                           help="Subcontract Manufacturing Order"/>
                </button>
            </xpath>
            <xpath expr="//group[@name='planning']" position="inside">
                <field name="subcontract_picking_type_id" string="Subcontracting Operation Type"/>
            </xpath>
        </field>
    </record>
</odoo>
