<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_confirm_purchase_popup" model="ir.ui.view">
        <field name="name">confirm.purchase.popup.view</field>
        <field name="model">confirm.purchase</field>
        <field name="arch" type="xml">
            <form>
                <p>
                    <field name="warning_message" readonly="1"/>.
                </p>
                <p>
                    Are you sure you want to Confirm this Purchase Order?
                </p>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
