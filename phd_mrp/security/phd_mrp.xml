<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_mrp_view_only" model="res.groups">
        <field name="name">View Only</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="base.module_category_manufacturing_manufacturing"/>
    </record>

    <record id="group_mrp_view_only_report" model="res.groups">
        <field name="name">View Only w Reports</field>
        <field name="implied_ids" eval="[(4, ref('phd_mrp.group_mrp_view_only'))]"/>
        <field name="category_id" ref="base.module_category_manufacturing_manufacturing"/>
    </record>

    <record id="mrp.group_mrp_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('phd_mrp.group_mrp_view_only_report')), (4, ref('stock.group_stock_user'))]"/>
        <field name="category_id" ref="base.module_category_manufacturing_manufacturing"/>
    </record>
</odoo>