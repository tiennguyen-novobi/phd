<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_inventory_valuation_improvement_search" model="ir.ui.view">
            <field name="name">view_inventory_valuation_improvement_search</field>
            <field name="model">stock.valuation.layer</field>
            <field name="inherit_id" ref="stock_account.view_inventory_valuation_search"/>
            <field name="arch" type="xml">
                <filter name="inactive" position="after">
                    <filter string="All Items" name="all"
                            domain="['|', ('active', '=', False), ('active', '=', True)]"/>
                    <separator/>
                    <filter string="With Posted Entries" name="entries"
                            domain="[('account_move_id', '!=', False)]"/>
                </filter>
            </field>
        </record>

        <record id="stock_account.action_stock_inventory_valuation" model="ir.actions.act_window">
            <field name="context">{'search_default_group_by_product_id': 1,
                'search_default_all': 1,
                'search_default_entries': 1}</field>
        </record>
    </data>
</odoo>
