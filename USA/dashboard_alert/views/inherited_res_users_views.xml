<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_users_form_simple_modif_extend_alert_channel" model="ir.ui.view">
            <field name="name">res.users.preferences.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
            <field name="priority">20</field>
            <field name="arch" type="xml">

                <field name="email" position="after">
                    <field name="channel_rec_mes_ids" widget="many2many_checkboxes" readonly="0"/>
                    <div>
                        <button name="show_contact_form" type="object"
                                string="Contact Information" icon="fa-arrow-right" class="btn-link"/>
                    </div>
                </field>
            </field>
        </record>

    </data>
</odoo>
