<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.alert.setting</field>
        <field name="model">res.config.settings</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="multi_company" position="after">
                <div id="alert_setting">
                    <h2>Dashboard Alert</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dashboard_alert_sms"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dashboard_alert_sms"/>
                                <div id="sms_detail_label" class="text-muted">
                                    Integrate with Twilio to send SMS for dashboard alert
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dashboard_alert_slack_bot"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dashboard_alert_slack_bot"/>
                                <div id="slack_detail_label" class="text-muted">
                                    Send Slack message for dashboard alert
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
