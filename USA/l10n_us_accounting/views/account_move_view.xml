<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Customer Invoices & Customer Credit Notes form -->
    <record id="invoice_form_usa" model="ir.ui.view">
        <field name="name">account.invoice.form.usa</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@groups='account.group_account_invoice'][hasclass('alert-info')][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@groups='account.group_account_invoice'][hasclass('alert-info')][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@groups='account.group_account_invoice'][hasclass('alert-info')]" position="after">
                <div id="alert_info_customer_invoices" groups="account.group_account_invoice"
                     class="alert alert-info text_margin_bottom" role="alert"
                     attrs="{'invisible': ['|', ('invoice_has_outstanding', '=', False), ('type', '!=', 'out_invoice')]}">
                    You have
                    <bold>
                        <a class="alert-link" href="#outstanding" role="button">outstanding payments/credit notes</a>
                    </bold>
                    for this customer. You can allocate them to mark this invoice as paid.
                </div>
                <div id="alert_info_customer_credit_notes" groups="account.group_account_invoice"
                     class="alert alert-info text_margin_bottom" role="alert"
                     attrs="{'invisible': ['|', ('invoice_has_outstanding', '=', False), '|', ('type', '!=', 'out_refund'), ('is_write_off', '=', True)]}">
                    Please choose
                    <bold>
                        <a class="alert-link" href="#outstanding" role="button">open invoice(s)</a>
                    </bold>
                    to allocate the credit note amount.
                </div>
                <div id="alert_info_write_off" groups="account.group_account_invoice"
                     class="alert alert-info text_margin_bottom" role="alert"
                     attrs="{'invisible': ['|', ('invoice_has_outstanding', '=', False), '|', ('type', '!=', 'out_refund'), ('is_write_off', '=', False)]}">
                    Please choose
                    <bold>
                        <a class="alert-link" href="#outstanding" role="button">open invoice(s)</a>
                    </bold>
                    to allocate the write-off amount.
                </div>
                <div id="alert_info_vendor_bills" groups="account.group_account_invoice"
                     class="alert alert-info text_margin_bottom" role="alert"
                     attrs="{'invisible': ['|', ('invoice_has_outstanding', '=', False), ('type', '!=', 'in_invoice')]}">
                    You have
                    <bold>
                        <a class="alert-link" href="#outstanding" role="button">outstanding payments/credit notes</a>
                    </bold>
                    for this supplier. You can allocate them to mark this bill as paid.
                </div>
                <div id="alert_info_vendor_credit_notes" groups="account.group_account_invoice"
                     class="alert alert-info text_margin_bottom" role="alert"
                     attrs="{'invisible': ['|', ('invoice_has_outstanding', '=', False), ('type', '!=', 'in_refund')]}">
                    Please choose
                    <bold>
                        <a class="alert-link" href="#outstanding" role="button">open bill(s)</a>
                    </bold>
                    to allocate the credit note amount.
                </div>
            </xpath>
            <xpath expr="//div[hasclass('alert-info')]" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>

            <field name="invoice_has_outstanding" position="after">
                <field name="is_write_off" invisible="1"/>
            </field>

            <!--<xpath expr="//h1[hasclass('mt0')]/../span[hasclass('o_form_label')]" position="attributes">-->
                <!--<attribute name="invisible">{'invisible': ['|', ('state', '=', 'draft'), '|', ('type', '!=', 'out_refund'), ('is_write_off', '=', True)]}</attribute>-->
            <!--</xpath>-->
            <!--<xpath expr="((//h1[hasclass('mt0')]/*)[1]/label)[2]" position="after">-->
                <!--<label for="number" string="Draft Write-off" attrs="{'invisible': ['|', ('state', '!=', 'draft'), '|', ('type', '!=', 'out_refund'), ('is_write_off', '!=', True)]}"/>-->
            <!--</xpath>-->
            <!--<xpath expr="((//h1[hasclass('mt0')]/*)[1]/label)[2]" position="attributes">-->
                <!--<attribute name="attrs">{'invisible': ['|', ('state', '!=', 'draft'), '|', ('type', '!=', 'out_refund'), ('is_write_off', '=', True)]}</attribute>-->
            <!--</xpath>-->
            <!--<xpath expr="(//h1[hasclass('mt0')]/*)[2]/label" position="attributes">-->
                <!--<attribute name="attrs">{'invisible': ['|', ('state', '!=', 'draft'), ('is_write_off', '=', True)]}</attribute>-->
            <!--</xpath>-->
            <!--<xpath expr="(//h1[hasclass('mt0')]/*)[2]/label" position="after">-->
                <!--<label for="sequence_number_next_prefix" string="Write-offs Number:" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('is_write_off', '=', False)]}"/><br/>-->
            <!--</xpath>-->

            <field name="invoice_date_due" position="after">
                <field name="aging_days" invisible="1"/>
            </field>

            <xpath expr="//field[@name='invoice_user_id']/.." position="inside">
                <field name="ar_in_charge" attrs="{'invisible':[('type','!=', 'out_invoice')]}"/>
            </xpath>

            <!--<field name="invoice_payment_term_id" position="after">-->
                <!--<field name="ar_in_charge" attrs="{'invisible':[('type','!=', 'out_refund')]}"/>-->
            <!--</field>-->
            <field name="ref" position="after">
                <field name="ar_in_charge" attrs="{'invisible':[('type','!=', 'out_refund')]}"/>
            </field>

            <button id="account_invoice_payment_btn" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('type', '!=', 'out_invoice'), ('state', '!=', 'posted'), ('invoice_payment_state', '!=', 'not_paid')]}</attribute>
                <attribute name="string">Receive Payment</attribute>
            </button>
            <button id="account_invoice_payment_btn" position="after">
                <button name="%(action_account_customer_credit_notes_usa)d"
                        id="account_customer_credit_notes_btn_usa"
                        type="action"
                        string="Make A Refund"
                        groups="account.group_account_invoice"
                        attrs="{'invisible': ['|', '|', '|', ('is_write_off', '=', True), ('state', '!=', 'posted'), ('invoice_payment_state', '!=', 'not_paid'), ('type', '!=', 'out_refund')]}"
                        class="oe_highlight"/>
            </button>
            <button name="action_reverse" position="after">
                <button name="%(action_account_write_off_bad_debt_usa)d"
                        id="account_write_off_bad_debt_btn_usa"
                        type="action"
                        string="Write Off"
                        groups="account.group_account_invoice"
                        attrs="{'invisible': ['|', '|', ('type', '!=', 'out_invoice'), ('state', '!=', 'posted'), ('invoice_payment_state', '!=', 'not_paid')]}"/>
            </button>

            <button name="button_draft" position="attributes">
                <attribute name="attrs">
                    {'invisible' : ['|', '|', ('restrict_mode_hash_table', '=', True), ('state', 'not in', ('posted', 'cancel')), ('invoice_payments_widget', '!=', 'false')]}
                </attribute>
            </button>

            <!--Show RESET TO DRAFT button with confirmed message and DELETE button-->
            <button name="button_draft" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="button_draft" position="after">
                <button name="button_draft_usa" string="Reset to Draft" type="object" groups="account.group_account_invoice"
                        attrs="{'invisible' : ['|', ('restrict_mode_hash_table', '=', True), ('state', 'not in', ('posted', 'cancel'))]}"/>
                <button name="action_delete" type="object" string="Delete" states="draft,cancel" confirm="Are you sure you want to delete this record ?"/>
            </button>

            <!--Button Cancel-->
            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="confirm">Are you sure you want to cancel this transaction?</attribute>
            </xpath>

        </field>
    </record>

    <!-- Extend Vendor Bills & Vendor Credit Notes form -->
    <record id="invoice_supplier_form_usa" model="ir.ui.view">
