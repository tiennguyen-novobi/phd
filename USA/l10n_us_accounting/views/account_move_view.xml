    <!-- Add some new columns in customer invoices list-->
    <record id="invoice_tree_usa" model="ir.ui.view">
        <field name="name">account.invoice.tree.usa</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_date_due" position="after">
                <field name="aging_days"/>
            </field>
            <field name="name" position="after">
                <field name="ar_in_charge"/>
            </field>
        </field>
    </record>

    <!-- Add new category named Write Offs -->
    <record id="action_invoice_write_off_usa" model="ir.actions.act_window">
        <field name="name">Write-offs</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
        <field name="view_id" eval="False"/>
        <field name="domain">[('type', '=', 'out_refund'), ('is_write_off', '=', True)]</field>
        <field name="context">{'default_type': 'out_refund', 'type': 'out_refund', 'journal_type': 'sale',
            'default_is_write_off': True, 'is_write_off': True,
            'form_view_ref': 'l10n_us_accounting.write_off_form_usa',
            'tree_view_ref': 'l10n_us_accounting.write_off_tree_usa'}</field>
        <field name="search_view_id" ref="view_account_invoice_filter_inherit_customer_vendor_credit_notes_usa"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a write off.
            </p>
            <p>
                Note that the easiest way to create a write off is to do it directly from
                the customer invoice, to refund it totally or partially.
            </p>
        </field>
    </record>

    <record id="write_off_tree_usa" model="ir.ui.view">
        <field name="name">account.invoice.write.off.tree.usa</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'" string="Invoice" create="false">
                <field name="partner_id" groups="base.group_user" string="Customer"/>
                <field name="invoice_date" string="Date"/>
                <field name="name"/>
                <field name="commercial_partner_id" invisible="1"/>
                <field name="invoice_payment_ref" invisible="1"/>
                <field name="journal_id" invisible="1"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                <field name="invoice_origin"/>
                <field name="amount_total_signed" string="Total" sum="Total"/>
                <field name="amount_residual_signed" string="Amount Due" sum="Amount Due"/>
                <field name="currency_id" invisible="1"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="state"/>
                <field name="type" invisible="context.get('type', True)"/>
            </tree>
        </field>
    </record>
    <record id="action_invoice_out_refund_tree" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="write_off_tree_usa"/>
        <field name="act_window_id" ref="action_invoice_write_off_usa"/>
    </record>

    <record id="write_off_form_usa" model="ir.ui.view">
        <field name="name">account.invoice.write_off.form.usa</field>
        <field name="model">account.move</field>
        <field name="mode">primary</field>
        <field name="priority">50</field>
        <field name="inherit_id" ref="invoice_form_usa"/>
        <field name="arch" type="xml">
            <!--Form-->
            <xpath expr="//header/.." position="attributes">
                <attribute name="create">false</attribute>
            </xpath>

            <field name="invoice_date" position="attributes">
                <attribute name="invisible">context.get('is_write_off', False)</attribute>
            </field>
            <field name="invoice_date" position="after">
                <field name="invoice_date" string="Write-off Date" invisible="not context.get('is_write_off', False)"/>
            </field>

            <field name="invoice_date_due" position="attributes">
                <attribute name="invisible">context.get('is_write_off', False)</attribute>
            </field>
            <field name="invoice_payment_term_id" position="attributes">
                <attribute name="invisible">context.get('is_write_off', False)</attribute>
            </field>

            <button name="action_invoice_sent" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', '|', ('is_write_off', '=', True), ('invoice_sent', '=', True), ('state', '!=', 'posted'), ('type', 'not in', ('out_invoice', 'out_refund'))]}</attribute>
            </button>
            <xpath expr="//button[@name='action_invoice_sent'][2]" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', '|', ('is_write_off', '=', True), ('invoice_sent', '=', False), ('state', '!=', 'posted'), ('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]}</attribute>
            </xpath>

            <xpath expr="//span[hasclass('o_form_label')]/field[@name='type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//span[hasclass('o_form_label')]/field[@name='type']" position="after">
                <span attrs="{'invisible': ['|', ('type', '=', 'entry'), ('state', '=', 'draft')]}">Write-offs</span>
            </xpath>

            <xpath expr="//group[@id='header_right_group']/div[hasclass('o_td_label')]" position="attributes">
                <attribute name="invisible">context.get('is_write_off', False)</attribute>
            </xpath>
            <xpath expr="//label[@for='invoice_payment_term_id']" position="attributes">
                <attribute name="invisible">context.get('is_write_off', False)</attribute>
            </xpath>
            <xpath expr="//group[@id='header_right_group']/div[hasclass('d-flex')]/span" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet/div/h1" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet/div/h1" position="after">
                <h1>
                    <span attrs="{'invisible': ['|', '|', ('type', '!=', 'out_refund'), ('state', '!=', 'draft'),
                                ('name', '!=', '/')]}">Draft Write-offs</span>
                </h1>
            </xpath>
        </field>
    </record>
    <record id="action_invoice_out_refund_form" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="write_off_form_usa"/>
        <field name="act_window_id" ref="action_invoice_write_off_usa"/>
    </record>

    <menuitem action="action_invoice_write_off_usa"
              id="menu_action_invoice_write_off"
              parent="account.menu_finance_receivables"
              sequence="3"/>

    <!-- Customize search view of Customer Invoices -->
    <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
        <field name="search_view_id" ref="view_account_invoice_filter_usa"/>
    </record>
    <!-- Customize Customer Credit Notes tree -->
    <record id="account.action_move_out_refund_type" model="ir.actions.act_window">
        <field name="domain">[('type', '=', 'out_refund'), ('is_write_off', '=', False)]</field>
        <field name="context">{'default_type': 'out_refund', 'type': 'out_refund', 'journal_type': 'sale', 'default_is_write_off': False, 'is_write_off': False}</field>
        <field name="search_view_id" ref="view_account_invoice_filter_inherit_customer_vendor_credit_notes_usa"/>
    </record>
    <!-- Customize search view of Vendor Bills -->
    <record id="account.action_move_in_invoice_type" model="ir.actions.act_window">
        <field name="search_view_id" ref="view_account_invoice_filter_inherit_vendor_bills_usa"/>
    </record>
    <!-- Customize search view of Vendor Credit Notes -->
    <record id="account.action_move_in_refund_type" model="ir.actions.act_window">
        <field name="search_view_id" ref="view_account_invoice_filter_inherit_customer_vendor_credit_notes_usa"/>
    </record>
</odoo>
