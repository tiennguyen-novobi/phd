    <!--Search View-->
    <record id="view_account_move_amount_filter" model="ir.ui.view">
        <field name="name">account.move.amount.filter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <filter name="amount_total_signed"
                        string="AmountSearchRange"
                        context='{
                            "title_display": "Search by Amount",
                            "name": "amount_total_signed",
                            "help": "__widget__",
                            "is_negative_checking": False}'
                />
            </field>
        </field>
    </record>

    <!-- Extend some new feature to Search and Filter -->
    <record id="view_account_invoice_filter_usa" model="ir.ui.view">
        <field name="name">account.invoice.select.usa</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//separator[1]" position="before">
                <!-- Filter -->
                <!-- This is a widget filter
                    We have the syntax as follows: name is the specific field, string is the name of QWeb template,
                     context is additional parameters that you want to transfer and help is always "__widget__"
                -->
                <filter name="amount_total"
                        string="AmountSearchRange"
                        context='{
                            "title_display": "Search by Total Amount",
                            "is_negative_checking": 0,
                            "name": "amount_total_signed",
                            "help": "__widget__"}'
                />
            </xpath>


            <xpath expr="//separator[3]" position="after">
                <filter name="overdue_1_30" string="Aging 1-30 days" domain="[('aging_days', '&lt;=', 30),
                    ('aging_days', '&gt;=', 1), ('state', '=', 'posted'), ('invoice_payment_state', '=', 'not_paid')]"/>
                <filter name="overdue_31_60" string="Aging 31-60 days" domain="[('aging_days', '&lt;=', 60),
                    ('aging_days', '&gt;=', 31), ('state', '=', 'posted'), ('invoice_payment_state', '=', 'not_paid')]"/>
                <filter name="overdue_61_90" string="Aging 61-90 days" domain="[('aging_days', '&lt;=', 90),
                    ('aging_days', '&gt;=', 61), ('state', '=', 'posted'), ('invoice_payment_state', '=', 'not_paid')]"/>
                <filter name="overdue_gt_90" string="Aging more than 90 days" domain="[('aging_days', '&gt;', 90),
                    ('state', '=', 'posted'), ('invoice_payment_state', '=', 'not_paid')]"/>
                <separator/>

                <filter name="this_month" string="This Month"
                        domain="[('invoice_date', '&gt;=', context_today().strftime('%Y-%m-01')),
                                ('invoice_date', '&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>

                <filter name="fiscal_quarter" string="This Fiscal Quarter" domain="[('fiscal_quarter', '=', True)]"/>
                <filter name="fiscal_year" string="This Fiscal Year" domain="[('fiscal_year', '=', True)]"/>
                <separator/>

                <filter name="last_month" string="Last Month"
                        domain="[('invoice_date', '&gt;=', (context_today() + relativedelta(months=-1, day=1)).strftime('%Y-%m-%d')),
                                ('invoice_date', '&lt;=', (context_today() + relativedelta(day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <filter name="last_fiscal_quarter" string="Last Fiscal Quarter"
                        domain="[('last_fiscal_quarter', '=', True)]"/>
                <filter name="last_fiscal_year" string="Last Fiscal Year" domain="[('last_fiscal_year', '=', True)]"/>
                <separator/>

                <filter name="my_invoices" string="My Transactions" domain="[('user_id','=',uid)]"/>
                <separator/>

                <filter name="my_activities" string="My Activities" domain="[('activity_ids.user_id', '=', uid)]"/>
                <separator/>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter_inherit_vendor_bills_usa" model="ir.ui.view">
        <field name="name">account.invoice.select.vendor.bills.usa</field>
        <field name="model">account.move</field>
