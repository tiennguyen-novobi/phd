<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="usa_payment_invoice_tree" model="ir.ui.view">
        <field name="name">usa_payment_invoice_tree</field>
        <field name="model">usa.payment.invoice</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="payment_type" invisible="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="payment_id" invisible="1"/>
                <field name="partner_id" invisible="1"/>
                <field name="has_multi_currency_group" invisible="1"/>
                <field name="account_move_line_id" required="1" string="Transactions"
                       attrs="{'readonly': [('id', '!=', False)]}"
                       options="{'no_create': True, 'no_open': True}"/>
                <field name="invoice_id" invisible="1"/>
                <field name="date_invoice" readonly="1" string="Transaction Date"/>
                <field name="date_due" readonly="1"/>
                <field name="amount_total" readonly="1"
                       widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="residual" readonly="1"
                       widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="payment" widget="monetary" attrs="{'readonly': [('has_multi_currency_group', '=', True)]}" force_save="1"/>
            </tree>
        </field>
    </record>

    <record id="usa_payment_invoice_form" model="ir.ui.view">
        <field name="name">usa_payment_invoice_form</field>
        <field name="model">usa.payment.invoice</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="payment_id" invisible="1"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="account_move_line_id" string="Transaction"
                                   attrs="{'invisible': [('invoice_id', '!=', False)]}"/>
                            <field name="invoice_id" string="Transaction"
                                   attrs="{'invisible': [('invoice_id', '==', False)]}"/>
                            <field name="date_invoice" readonly="1"/>
                            <field name="date_due" readonly="1"/>
                        </group>

                        <group>
                            <field name="amount_total" readonly="1" widget="monetary"/>
                            <field name="residual" readonly="1" widget="monetary"/>
                            <field name="payment" widget="monetary"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>