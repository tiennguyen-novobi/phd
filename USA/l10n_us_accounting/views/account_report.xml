<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Rename name of action reports-->
    <record id="account.account_invoices" model="ir.actions.report">
        <field name="name">Transactions</field>
    </record>

    <record id="account.account_invoices_without_payment" model="ir.actions.report">
        <field name="name">Transactions without Payment</field>
    </record>


    <!--Invoice Document report without Payments-->
    <template id="report_invoice_document_for_credit_note_write_off" inherit_id="account.report_invoice_document">
        <xpath expr='//h2/span[@t-if="o.type == &apos;out_refund&apos;"]' position="attributes">
            <attribute name="t-if">o.type == 'out_refund' and o.is_write_off == False</attribute>
        </xpath>

        <xpath expr='//h2/span[@t-field="o.name"]' position="before">
            <span t-if="o.type == 'out_refund' and o.is_write_off == True">Write-off</span>
        </xpath>

        <xpath expr="//div[@t-if='o.invoice_date']/strong" position="replace">
            <strong t-if="o.type == 'out_invoice'">Invoice Date:</strong>
            <strong t-if="o.type == 'in_invoice'">Bill Date:</strong>
            <strong t-if="o.type == 'out_refund' and o.is_write_off == True">Write-off Date:</strong>
            <strong t-if="o.type in ['out_refund', 'in_refund'] and o.is_write_off == False">Credit Note Date:</strong>
        </xpath>
    </template>

    <!--Invoice Document report with Payments-->
    <template id="report_invoice_document_for_credit_note_write_off_with_payments" inherit_id="account.report_invoice_document_with_payments">
        <xpath expr='//t[@t-esc="payment_vals[&apos;date&apos;]"]/..' position="replace">
            <i class="oe_form_field text-right oe_payment_label">Applied on <t t-esc="payment_vals['date']"/></i>
        </xpath>
    </template>
</odoo>
