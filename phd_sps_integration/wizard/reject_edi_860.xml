<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_reject_edi_860_popup" model="ir.ui.view">
        <field name="name">reject.edi.860.popup.view</field>
        <field name="model">reject.edi.860</field>
        <field name="arch" type="xml">
            <form>
                <p>
                    Please Fill the Note before Rejecting the Change
                </p>
                <p>
                    <field name="note" required="1"/>.
                </p>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
