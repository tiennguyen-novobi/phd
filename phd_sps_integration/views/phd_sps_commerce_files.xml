<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="phd_sps_commerce_file_filter" model="ir.ui.view">
        <field name="name">phd.sps.commerce.file</field>
        <field name="model">phd.sps.commerce.file</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <search string="Search SPS Commerce Document">
                <field name="sync_status"/>
                <field name="attachment_id"/>
                <field name="origin"/>
            </search>
        </field>
    </record>


    <record id="sps_commerce_document_form" model="ir.ui.view">
        <field name="name">phd.sps.commerce.document.850.form</field>
        <field name="model">phd.sps.commerce.file</field>
        <field name="arch" type="xml">
            <form edit="false" create="false">
                <header>
                    <field name="sync_status" widget="statusbar"/>
                    <button name="action_pending" class="oe_highlight" type="object" string="Set to Pending"
                            attrs="{'invisible': [('sync_status', '!=', 'error')]}"/>
                    <button name="action_mark_done" string="Mark Done" type="object" class="btn-primary"
                            attrs="{'invisible': [('sync_status', '!=', 'error')]}"/>
                </header>
                <sheet>
                    <group>
                        <field name="upload_download_time"/>
                        <field name="last_modify_on_remote"/>
                        <field name="document_type"/>
                        <field name="last_imported"/>
                        <field name="is_imported"/>
                    </group>
                    <group>
                        <field name="last_exported"/>
                        <field name="is_exported"/>
                        <field name="origin" widget="reference"/>
                        <field name="attachment_id"/>
                        <field name="unique"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="sps_commerce_document" model="ir.ui.view">
        <field name="name">phd.sps.commerce.document.850</field>
        <field name="model">phd.sps.commerce.file</field>
        <field name="arch" type="xml">
            <tree decoration-success="sync_status == 'done'"
                  decoration-danger="sync_status == 'error'"
                  decoration-warning="sync_status == 'pending'" create="false">
                <field name="upload_download_time"/>
                <field name="last_modify_on_remote"/>
                <field name="document_type"/>
                <field name="last_imported"/>
                <field name="is_imported"/>
                <field name="last_exported"/>
                <field name="is_exported"/>
                <field name="origin"/>
                <field name="attachment_id"/>
                <field name="unique"/>
                <field name="sync_status"/>
            </tree>
        </field>
    </record>

    <record id="action_sps_commerce_document_850" model="ir.actions.act_window">
        <field name="name">Document 850</field>
        <field name="res_model">phd.sps.commerce.file</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('document_type', '=', '850')]</field>
        <field name="search_view_id" ref="phd_sps_commerce_file_filter"/>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('sps_commerce_document')})]"/>
    </record>

