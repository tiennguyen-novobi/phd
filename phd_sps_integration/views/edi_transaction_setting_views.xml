<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="edi_transaction_setting_view_tree" model="ir.ui.view">
        <field name="name">edi.transaction.setting.view.tree</field>
        <field name="model">edi.transaction.setting</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="vendor_line_status_code_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="edi_transaction_setting_view_form" model="ir.ui.view">
        <field name="name">edi.transaction.setting.view.form</field>
        <field name="model">edi.transaction.setting</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id" required="1"/>
                    </group>
                    <group>
                        <field name="vendor_line_status_code_ids" required="1" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_edi_transaction_setting" model="ir.actions.act_window">
        <field name="name">EDI Settings</field>
        <field name="res_model">edi.transaction.setting</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_edi_transaction_setting"
            name="EDI Settings"
            action="action_edi_transaction_setting"
            parent="sale.menu_sale_config"
            sequence="99"/>
</odoo>
