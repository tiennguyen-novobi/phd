                                </td></tr>
                                <tr><td valign="middle" align="left">
                                    ${object.company_id.street}
                                    % if object.company_id.city:
                                        , ${object.company_id.city}
                                    % endif
                                    % if object.company_id.state_id:
                                        , ${object.company_id.state_id.name}
                                    % endif
                                    % if object.company_id.country_id:
                                        , ${object.company_id.country_id.name}
                                    % endif
                                </td></tr>
                            </table>
                        </td>
                    </tr>
                </tbody>
                </table>
                </td></tr>
                </table>
            </field>
        </record>
    </data>
</odoo>
