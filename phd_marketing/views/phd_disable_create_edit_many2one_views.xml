<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="phd_phd_mko_view_form_disable_many2one" model="ir.ui.view">
        <field name="name">phd.phd.mko.form</field>
        <field name="model">phd.mko</field>
        <field name="inherit_id" ref="phd_marketing.phd_mko_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="context">{'is_disable_create_edit_many2one': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
